<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://petEdit.caption"
        focusComponent="form"
        messagesPack="com.company.infopro.web.screens.pet">
    <data>
        <instance id="petDc"
                  class="com.company.infopro.entity.Pet">
            <view extends="_local">
                <property name="type" view="_minimal">
                    <property name="category"/>
                </property>
                <property name="owner" view="_minimal">
                    <property name="email"/>
                </property>
            </view>
            <loader/>
        </instance>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="editActions" spacing="true">
        <form id="form" dataContainer="petDc">
            <column width="350px">
                <textField id="nameField" property="name"/>
                <pickerField id="typeField" property="type">
                    <actions>
                        <action id="lookup" type="picker_lookup"/>
                        <action id="clear" type="picker_clear"/>
                    </actions>
                </pickerField>
                <pickerField id="ownerField" property="owner">
                    <actions>
                        <action id="lookup" type="picker_lookup"/>
                        <action id="clear" type="picker_clear"/>
                    </actions>
                </pickerField>
            </column>
        </form>
        <hbox id="editActions" spacing="true">
            <button id="commitAndCloseBtn" action="windowCommitAndClose"/>
            <button id="closeBtn" action="windowClose"/>
        </hbox>
    </layout>
</window>
