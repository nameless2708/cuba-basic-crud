<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        xmlns:c="http://schemas.haulmont.com/cuba/screen/jpql_condition.xsd"
        caption="msg://petTypeBrowse.caption"
        focusComponent="petTypesTable"
        messagesPack="com.company.infopro.web.screens.pettype">
    <data readOnly="true">
        <collection id="petTypesDc"
                    class="com.company.infopro.entity.PetType">
            <view extends="_local">
                <property name="category"/>
            </view>
            <loader id="petTypesDl">
                <query>
                    <![CDATA[select e from inforpro_PetType e]]>
                </query>
            </loader>
        </collection>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="petTypesTable"
            spacing="true">
        <filter id="filter"
                applyTo="petTypesTable"
                dataLoader="petTypesDl">
            <properties include=".*"/>
        </filter>
        <groupTable id="petTypesTable"
                    width="100%"
                    dataContainer="petTypesDc">
            <actions>
                <action id="create" type="create"/>
                <action id="edit" type="edit"/>
                <action id="remove" type="remove"/>
            </actions>
            <columns>
                <column id="name"/>
                <column id="category"/>
            </columns>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn" action="petTypesTable.create"/>
                <button id="editBtn" action="petTypesTable.edit"/>
                <button id="removeBtn" action="petTypesTable.remove"/>
            </buttonsPanel>
        </groupTable>
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>
