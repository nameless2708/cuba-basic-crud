<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://visitEdit.caption"
        focusComponent="form"
        messagesPack="com.company.infopro.web.screens.visit">
    <data>
        <instance id="visitDc"
                  class="com.company.infopro.entity.Visit">
            <view extends="_local">
                <property name="pet" view="_minimal"/>
                <property name="veterinarian" view="_minimal"/>
                <property name="consumable" view="_minimal"/>
            </view>
            <loader/>
            <collection id="consumableDc" property="consumable"/>
        </instance>
    </data>
    <dialogMode height="AUTO"
                width="AUTO"
                modal="true"
                forceDialog="true"/>
    <layout expand="editActions" spacing="true">
        <form id="form" dataContainer="visitDc">
            <column width="350px">
                <dateField id="visitDateField" property="visitDate"/>
                <textArea id="descriptionField" property="description" rows="5"/>
                <textField id="amountField" property="amount" editable="false"/>
                <textField id="hourSpentField" property="hourSpent"/>
                <pickerField id="petField" property="pet">
                    <actions>
                        <action id="lookup" type="picker_lookup"/>
                        <action id="clear" type="picker_clear"/>
                    </actions>
                </pickerField>
                <pickerField id="veterinarianField" property="veterinarian">
                    <actions>
                        <action id="lookup" type="picker_lookup"/>
                        <action id="clear" type="picker_clear"/>
                    </actions>
                </pickerField>

            </column>
        </form>
        <groupBox id="consumableBox" caption="msg://com.company.infopro.entity/Visit.consumable">
            <table id="consumableTable" dataContainer="consumableDc" width="100%" height="200px">
                <actions>
                    <action id="add" type="add"/>
                    <action id="exclude" type="exclude"/>
                </actions>
                <columns>
                    <column id="title"/>
                </columns>
                <buttonsPanel>
                    <button action="consumableTable.add"/>
                    <button action="consumableTable.exclude"/>
                </buttonsPanel>
            </table>
        </groupBox>
        <hbox id="editActions" spacing="true">
            <button id="commitAndCloseBtn" action="windowCommitAndClose"/>
            <button id="closeBtn" action="windowClose"/>
        </hbox>
    </layout>
</window>
