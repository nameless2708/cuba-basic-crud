<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://veterinarianEdit.caption"
        focusComponent="form"
        messagesPack="com.company.untitled.web.screens.veterinarian">
    <data>
        <instance id="veterinarianDc"
                  class="com.company.untitled.entity.Veterinarian">
            <view extends="_local">
                <property name="user" view="_minimal"/>
            </view>
            <loader/>
        </instance>
    </data>
    <dialogMode height="AUTO"
                width="AUTO"
                modal="true"
                forceDialog="true"/>
    <layout expand="editActions" spacing="true">
        <form id="form" dataContainer="veterinarianDc">
            <column width="350px">
                <pickerField id="userField" property="user">
                    <actions>
                        <action id="lookup" type="picker_lookup"/>
                        <action id="clear" type="picker_clear"/>
                    </actions>
                </pickerField>
                <textField id="hourlyRateField" property="hourlyRate"/>
            </column>
        </form>
        <hbox id="editActions" spacing="true">
            <button id="commitAndCloseBtn" action="windowCommitAndClose"/>
            <button id="closeBtn" action="windowClose"/>
        </hbox>
    </layout>
</window>
